<!--miniprogram/menu/menu.wxml-->
<view class="menuContent">
  <!-- 顶部商家信息 -->
  <view class='topItems'>
    <view class='branchStore'>
      <image 
      class='locateImg'   
      src='../../../images/diamand.png'>
      </image>
      <view class='storeInfo'>
        <text class='storeName'>{{storeName}}</text>
        <text class='distance'>距您{{distance}}m</text>
      </view>
    </view>
    <button class='delivery'>自提/外卖</button>
  </view>

  <!-- 轮播图 -->
  <swiper 
  class="menuswipper"
  indicator-dots="{{indicatorDots1}}"
  autoplay="{{autoplay1}}" 
  interval="{{interval1}}" 
  duration="{{duration1}}" 
  circular="{{circular1}}">
    <block wx:for="{{imgArr}}" wx:key="swipperunique">
      <swiper-item>
        <image src="{{item}}" class="slide-image" mode="scaleToFill" />
      </swiper-item>
    </block>
  </swiper>

  <!-- 菜单 -->
  <view class="selectedCard">
    <view class="menu-container">
      <scroll-view 
      scroll-y="true" 
      class="scroll-view" 
      scroll-into-view="head-{{indexSize}}">
        <view class="scroll-view-ul">
          <block 
          wx:for="{{detail}}" 
          wx:for-item="item" 
          wx:key="index" 
          id="head-{{index}}">
            <view 
            class="scroll-view-item {{indexSize === index?'active':''}}" 
            bindtap="scrollTo" 
            data-index="{{index}}">
              {{item.title}}
            </view>
          </block>
        </view>
      </scroll-view>
    </view>

    <swiper 
    indicator-dots='true' 
    class="detail-container" 
    bindchange="change" 
    data-index="{{index}}" 
    current="{{indexSize}}" 
    indicator-dots="{{indicatorDots}}" 
    autoplay="{{autoplay}}" 
    duration="{{duration}}">
      <swiper-item 
      wx:for="{{detail}}" 
      wx:for-item="item" 
      wx:key="index">
        <scroll-view 
        scroll-y="true" 
        class="market-scroll-list">
          <view class="title">{{detail[indexSize].title}}       
          </view>
          <a 
          wx:for="{{detail[indexSize].list}}" 
          wx:key="index" 
          wx:key="index" 
          item="item" 
          key="key">
            <view class="inner">
              <view class="cover">
                <image class="cover-img"   
                src="../../../images/vanillalotte.jpeg">
                </image>
              </view>
              <view class="info overflow">
                <view class="info-title overflow">
                  {{item.title}}
                </view>
                <view class="info-subtitle overflow">
                  {{item.subtitle}}
                </view>
                <view class="info-desc overflow">
                  {{item.title}}
                </view>
              </view>
              <view class="num">
                <text class="text">数量：999</text>
              </view>
            </view>
          </a>
        </scroll-view>
      </swiper-item>
    </swiper>
  </view>
</view>