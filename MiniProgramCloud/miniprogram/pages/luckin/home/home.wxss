/* miniprogram/home/home.wxss */
.bg {
  position: fixed;
  height: 100%;
  width: 100%;
  top: 0;
  left: 0;
  flex-direction: column;
}
.wxswipper {
  height: 64%;
}
.slide-image {
  width: 100%;
  height: 100%;
}
.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9000;
  background: black;
  opacity: 0.5;
}
.popview {
  display: flex;
  position: fixed;
  flex-direction: column;
  top: 15%;
  width: 80%;
  height: 70%;
  left: 0;
  right: 0;
  margin: 0 auto;
  z-index: 9999;
  align-items: flex-end;
}
.cancelbutton {
  width: 30px;
  height: 30px;
  border-radius: 15px;
  background: white;
  opacity: 0.8;
  text-align: center;
  margin-bottom: 12px;  
}
.popimage {
  position: relative;
  left: 0;
  top: 0;
  height: 100%;
  width: 100%;
}
navigator {
  height: 12%;
}
.section {
  display: flex;
  align-items: center;
}
.section_title {
  flex: 3;
  padding-left: 15px;
}
.bc_title {
  font-size: 20px;
  font: bolder;
}
.bc_subtitle {
  font-size: 13px;
  color: gray;
}
.bc_icon {
  position: fixed;
  right: 20px;
}
