/* miniprogram/mine/mine.wxss */
.bg {
  display: flex;
  height: 100%;
  width: 100%;
  flex-direction: column;
  position: fixed;
  top: 0;
  left: 0;
}
.login {
  display: flex;
  height: 20%;
  width: 100%;
  background: gainsboro;
  align-items: center;
}
.avatar {
  margin-left: 30px;
  height: 100px;
  width: 100px;
  border-radius: 50px; 
}
.username {
  margin-left: 10px;
}
.arrow {
  margin-right: 30px;
  text-align: right;
  flex: 1;
}
.listandimage {
  margin-top: 20px;
  display: flex;
  flex-direction: column;
}
.cell_content {
  height: 40px;
  width: 100%;
  display: flex;
  align-items: center;
}
.cell_icon {
  margin-left: 20px;
  width: 20px;
  height: 20px;
}
.cell_title {
  margin-left: 20px;
}
.cell_indicator {
  margin-right: 30px;
  text-align: right;
  flex: 1;
}
.affiliateimage {
  width: 100%;
  position: absolute;
  bottom: 0;
  overflow: hidden;
}